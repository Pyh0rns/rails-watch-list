<div class="container mb-5">
  <h2>Mes listes</h2>
  <%= link_to 'Create a new list', new_list_path, class: "btn btn-success" %>

  <div class="row mt-5 d-flex">
    <% @lists.each do |list| %>
    <div class="col-6">
      <div class="card-category m-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.movies.first.present? ? list.movies.first.poster_url : 'https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png' %>)">
        <%= link_to list_path(list), class:"link-to" do %>
          <h2><%= list.name %></h2>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>
