<div class="banner mb-5" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80);">
  <div class="container d-flex align-items justify-content-between">
    <div class="left">
      <h1> Here are my movies lists!</h1>
      <p><span data-controller="typed-js"></span></p>

    </div>

    <div class="right">
      <%= simple_form_for @list do |f| %>
      <%= f.input :name, placeholder: 'Name new list' %>
      <div class="banner-btn">
        <%= f.button :submit %></div>
      </div>
  <% end %>

    </div>



    <div
      class="notification"
      data-controller="notification"
      data-notification-delay-value="2000"
      class="transition transform duration-2000 hidden"
      data-transition-enter-from="opacity-0 translate-x-6"
      data-transition-enter-to="opacity-100 translate-x-0"
      data-transition-leave-from="opacity-100 translate-x-0"
      data-transition-leave-to="opacity-0 translate-x-6"
    >
      <p>This alert will magically disappear!</p>
      <button data-action="notification#hide">Close</button>
    </div>
  </div>
</div>






<div class="container mb-5">
  <div class="row mt-5 d-flex">
    <% @lists.each do |list| %>
      <div class="col-6">
        <div class="card-category m-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.movies.first.present? ? list.movies.first.poster_url : 'https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png' %>)">
          <%= link_to list_path(list), class:"link-to" do %>
            <h2><%= list.name %></h2>
            <%= link_to list_destroy_path(list), method: :delete, class: "suppr-btn", data: { confirm: "sure?" } do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
