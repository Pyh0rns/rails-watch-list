<div class="banner_small mb-5" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1478720568477-152d9b164e26?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80);">
  <div class="container">
    <h1> This is the list : <%= @list.name %></h1>
    <p>So many good movies.</p>
    <%= link_to 'Back to the lists', lists_path, class:"btn btn-light" %>
  </div>
</div>


<div class="container">

<%= link_to 'Create a bookmark', new_list_bookmark_path(@list), class: "btn btn-dark" %>


<div class="bookmarks m-5">
  <h2>Your bookmarks</h2>

  <% @list.bookmarks.each do |bookmark| %>
    <div class="card-product mb-2">
      <img src=" <%=bookmark.movie.poster_url %> " />
      <div class="card-product-infos">
        <h2><%= bookmark.movie.title %> </h2>
        <p><%= bookmark.comment %></p>
        <%= link_to bookmark_path(bookmark), method: :delete, class: "suppr-btn", data: { confirm: "Are you sure you want to remove" } do %>
           <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

