<div class="banner_small mb-5" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container">
    <h1> This is the list : <%= @list.name %></h1>
    <p>So many good movies.</p>
  </div>
</div>


<div class="container">

<%= link_to 'Back to the lists', lists_path %>
<%= link_to 'Create a bookmark', new_list_bookmark_path(@list), class: "btn btn-success" %>


<div class="bookmarks m-5">
  <h2>Your bookmarks</h2>

  <% @list.bookmarks.each do |bookmark| %>
    <div class="card-product mb-2">
      <img src=" <%=bookmark.movie.poster_url %> " />
      <div class="card-product-infos">
        <h2><%= bookmark.movie.title %> </h2>
        <p><%= bookmark.comment %></p>
        <%= link_to 'Delete', bookmark_path(bookmark), method: :delete, data: {confirm: "Are you sure?"} %>
      </div>
    </div>
  <% end %>
</div>





